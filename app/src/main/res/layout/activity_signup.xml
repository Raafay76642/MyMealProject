<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_signup">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLoginPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:background="@drawable/btn_round"
            android:text="@string/login_panel"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btnSignupPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/signup_panel"
            android:background="@drawable/btn_round"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="216dp"
        android:layout_height="195dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo_mymeal" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-40dp"
        app:cardBackgroundColor="@color/signup_background"

        app:cardCornerRadius="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:text="Get Started"
            android:textColor="#fff"
            android:textSize="24dp"
            android:textStyle="italic" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="Just a few details to get you started"
            android:textColor="#fff" />


        <EditText
            android:id="@+id/name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:background="@drawable/edittext_round"
            android:hint="name"
            android:inputType="text"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/emailadress"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:background="@drawable/edittext_round"
            android:hint="Emailadress"
            android:inputType="text"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:background="@drawable/edittext_round"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="220dp"
            android:background="@drawable/edittext_round"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="24sp" />


    </android.support.v7.widget.CardView>
