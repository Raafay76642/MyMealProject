<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/black"

    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/orange_stroke"
    android:padding="0dp">


    <TextView android:text="Rate It" android:id="@+id/rank_dialog_text1"
        android:textSize="24dp" android:layout_marginTop="10dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_gravity="center"/>

    <RatingBar
        android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/bar" android:layout_gravity="center"
        android:numStars="5" android:stepSize="1" android:rating="1" android:progressTint="@color/theme_orange"
        android:progressBackgroundTint="@android:color/white"
        android:isIndicator="false"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <Button android:id="@+id/btnRateCanel"
        android:layout_height="wrap_content"
        android:text="Cancel"  android:focusable="false"
        android:layout_margin="5dip" android:textColor="#FFF8C6"
        android:textSize="20sp" android:layout_width="wrap_content"
        android:background="@drawable/btn_round"/>
    <Button android:id="@+id/btnRateSubmit"
        android:layout_height="wrap_content"
        android:text="Update"  android:focusable="false"
        android:layout_margin="5dip" android:textColor="#FFF8C6"
        android:textSize="20sp" android:layout_width="wrap_content"
        android:background="@drawable/btn_round"/>
</LinearLayout>


</LinearLayout>
</android.support.v7.widget.CardView>