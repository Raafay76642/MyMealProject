<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/black"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/orange_stroke"
        android:padding="0dp">


        <TextView android:text="Edit Dish" android:id="@+id/rank_dialog_text1"
            android:textSize="24dp" android:layout_marginTop="10dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/newDishName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_round"
            android:hint="new name"
            android:inputType="text"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="24sp" />
        <EditText
            android:id="@+id/newDishPrice"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_round"
            android:hint="new price"
            android:inputType="number"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button android:id="@+id/btnCancel"
                android:layout_height="wrap_content"
                android:text="Cancel"  android:focusable="false"
                android:layout_margin="5dip" android:textColor="#FFF8C6"
                android:textSize="20sp" android:layout_width="wrap_content"

                android:background="@drawable/btn_round"/>
            <Button android:id="@+id/btnUpdate"
                android:layout_height="wrap_content"
                android:text="Update"  android:focusable="false"
                android:layout_margin="5dip" android:textColor="#FFF8C6"
                android:textSize="20sp" android:layout_width="wrap_content"
                android:background="@drawable/btn_round"/>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>